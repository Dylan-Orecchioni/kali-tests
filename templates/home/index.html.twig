{% extends 'base.html.twig' %}

{% block body %}
<h1>Bienvenue !</h1>
    {% if isAuthenticated %}
        <p>Vous êtes connecté en tant que {{ user.firstName }} {{ user.lastName }}.</p>
        <a href="{{ path('logout') }}">Se déconnecter</a>
    {% else %}
        <p>Vous n'êtes pas connecté.</p>
        <a href="{{ path('login') }}">Se connecter</a>
    {% endif %}
{% endblock %}
